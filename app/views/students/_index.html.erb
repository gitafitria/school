<p id="notice"><%= notice %></p>

<h1>
  <%= "Deleted " unless is_index_page %>
  Student List
</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Dob</th>
      <th>Is valid</th>
      <th>Semester</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.address %></td>
        <td><%= student.dob %></td>
        <td><%= student.is_valid %></td>
        <td><%= student.semester %></td>
        <td><%= link_to 'Show', student %></td>
        <% if student.is_valid %>
          <td><%= link_to 'Edit', edit_student_path(student) %></td>
          <td>
            <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        <% else %>
          <td>
            <%= link_to 'Restore', restore_student_path(student), method: :put, data: { confirm: 'Are you sure want to restore this data?' } %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path %>
